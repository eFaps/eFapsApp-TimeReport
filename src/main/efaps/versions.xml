            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <version number="1" reloadCache="false" login="true" compile="true">
        <description>Install ERP-TimeReport Basic Modul.</description>
        <script type="groovy">
            import org.efaps.admin.runlevel.RunLevel;
            import org.efaps.db.Context;
            import org.efaps.db.Insert;
            import org.efaps.db.SearchQuery;
            import org.efaps.esjp.admin.ui.UIUpdate;
            import org.efaps.importer.DataImport;
            import org.efaps.db.Instance;

            import java.net.URL
            import java.io.File;

            EFAPS_LOGGER.info("Checking for import of JaasKeys for eFapsApp-TimeReport");

            SearchQuery query = new SearchQuery();
            query.setQueryTypes("Admin_User_JAASKey");
            query.addWhereExprEqValue("Key", "TimeReport_Admin");
            query.addSelect("OID");
            query.execute();
            if (!query.next()) {
                RunLevel.init("shell");
                RunLevel.execute();

                EFAPS_LOGGER.info("    Importing JaasKeys for eFapsApp-TimeReport");
                URL url = new URL(EFAPS_ROOTURL, "Data/IMPORT_UserJAASKey.xml");
                DataImport imp = DataImport.readFile(url);
                imp.updateInDB();
            }
             UIUpdate update = new UIUpdate();
            <!-- connect the TimeReport_MyDesk Menu to the main menu from efaps -->
            update.add2Menu("5d86cc1e-61bc-4bd6-b529-d2dc1293bf54", "87001cc3-c45c-44de-b8f1-776df507f268", 1);

            <!-- connect the TimeReport_HumanResource_EmployeeTree_EmployeeReportPosition to the main menu from HumanResource_EmployeeTree -->
            update.add2Menu("050324fb-2c89-4ab8-9d03-aacb81c9160d", "136a5437-7642-4e09-8182-23fc97fedbab", -1);

            <!-- connect the TimeReport_Projects_ProjectTree_Categories to the main menu from Projects_ProjectTree -->
            update.add2Menu("4e58475b-fa91-44e1-9c4c-93ff776a4a85", "1336daea-b7d2-418f-accc-0edf5937f3cb", 1);

            <!-- Timereport_Timereport, Admin_Help_MainMenu -->
            update.add2Help("f40d1f5d-0b6c-410e-b4bc-c855d38f220e", "dead549e-5cc6-49f9-9a79-8e33aa139f6d", -1);
        </script>
    </version>
</install>
